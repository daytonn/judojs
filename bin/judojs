#!/usr/bin/env ruby

$: << File.expand_path(File.join(File.dirname(__FILE__), "../lib"))

require 'rubygems'
require 'rubikon'
require 'judojs.rb'

class JudoJs < Rubikon::Application::Base
  default do
    Judojs::Command.help
  end
  
  command :compile do
    JudoJs::Command.compile
  end
  
  command :watch do
    JudoJs::Command.watch
  end
  
  command :import do
    JudoJs::Command.import
  end
  
  option :directory, [:dir] do
    @directory = dir
  end
  option :p => :directory
  command :create, [:app_name] do
    dir = @directory || '/'
    Judojs::Command.create(app_name, dir)
  end  
end